@model lab2.ViewModels.ClientViewModel
<style type="text/css">
    th, td {
        padding-right: 15px;
    }
</style>

<hr style="border-top: 3px double #8c8b8b;" />
<div>
    <form class="form-inline" method="get" style="float:left; width:300px; margin-left:30px">
        @Html.Label("Enter birth year:")
        @Html.TextBox("Year", Model.SelectedYear)
        <br />
        <input type="submit" value="Show" />
    </form>


    <form class="form-inline" method="post" style="float:right; width:300px;">
        @Html.Label("Name:")
        @Html.TextBox("Name")
        <br />

        @Html.Label("BirthDay:")
        <input type="date" id="BirthDay" name="BirthDay" />
        <br />

        @Html.Label("Phone:")
        @Html.TextBox("Phone")
        <br />
        <input type="submit" value="Add" />
    </form>
</div>
<div style="clear:both"></div>
<hr style="border-top: 3px double #8c8b8b;" />

<table style="margin:0px auto; width:500px">
    <caption>Clients</caption>
    <tr>
        <th>Name</th>
        <th>Birthday</th>
        <th>Phone number</th>
    </tr>
    @foreach (var client in Model.Clients)
    {
        <tr>
            <td>@client.Name</td>
            <td>@client.Birthday.ToShortDateString()</td>
            <td>@client.Phone</td>
        </tr>
    }

</table>


<hr style="border-top: 3px double #8c8b8b;" />

